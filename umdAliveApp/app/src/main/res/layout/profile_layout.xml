        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="jrfhgljhfl kdfhslkdfgj hdfgklj sdfhkgjh sdlfkgj hdslkfjgh sdkfjh gksd fkg fgkljsh dfklgh sf hgdskflhg klsdfhg lkjsf dhgklshf dkgjh sdflkgjhfkjglksdjfkj hlk sflk " />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/aboutMe"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileMajor" />

</android.support.constraint.ConstraintLayout>