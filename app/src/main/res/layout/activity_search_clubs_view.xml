<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/keyword_title"
        android:textColor="@color/machinery"
        android:text="Category of Club:"
        android:clickable="false"
        android:textSize="20sp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keywordChooser"
        android:textColor="@color/oatmeal"
        android:background="@color/machineryTransparent"
        android:layout_below="@+id/keyword_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp" />

    <ListView
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@color/oatmeal" />

</LinearLayout>