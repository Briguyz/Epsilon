<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_input"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:hint='ex: "jon.doe@gmail.com"'
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="244dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/email_title"
        android:layout_alignRight="@+id/email_input"
        android:layout_alignEnd="@+id/email_input"
        android:layout_marginTop="71dp"
        android:id="@+id/password_input"
        android:hint='ex: "abc123"' />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password_input"
        android:layout_alignLeft="@+id/password_input"
        android:layout_alignStart="@+id/password_input"
        android:layout_marginBottom="42dp"
        android:id="@+id/password_title"
        android:text="Password:"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_title"
        android:text="Email:"
        android:textSize="20sp"
        android:layout_above="@+id/email_input"
        android:layout_alignLeft="@+id/email_input"
        android:layout_alignStart="@+id/email_input"
        android:textColor="@color/textColorPrimary" />

    <TextView
        android:text="Welcome \n          to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_title"
        android:textColor="@color/textColorPrimary"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="U M D \n     A L I V E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UMD_Alive_Title"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="@color/textColorPrimary"
        android:layout_below="@+id/welcome_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:id="@+id/make_account"
        android:background="@color/colorPrimary"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:minHeight="30dp"
        android:minWidth="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/UMD_Alive_Title"
        android:layout_alignEnd="@+id/UMD_Alive_Title"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:onClick="signUpScreen" />

    <TextView
        android:text="Sign Up Now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_title"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_above="@+id/make_account"
        android:layout_alignRight="@+id/UMD_Alive_Title"
        android:layout_alignEnd="@+id/UMD_Alive_Title"
        android:layout_marginBottom="7dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:minHeight="35dp"
        android:minWidth="60dp"
        android:layout_alignBottom="@+id/password_input"
        android:layout_alignRight="@+id/make_account"
        android:layout_alignEnd="@+id/make_account"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:background="@color/colorPrimary"
        android:onClick="login" />
</RelativeLayout>
