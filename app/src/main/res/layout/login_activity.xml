<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:text="Welcome \n          to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_title"
        android:textColor="@color/textColorPrimary"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_above="@+id/sign_up_title"
        android:layout_alignRight="@+id/email_input"
        android:layout_alignEnd="@+id/email_input"
        android:layout_marginBottom="40dp" />

    <TextView
        android:text="U M D \n     A L I V E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UMD_Alive_Title"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/welcome_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UMD_Alive_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />


</RelativeLayout>
