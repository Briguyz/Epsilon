<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="395dp"
    android:elevation="0dp">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@color/oatmeal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/example_image"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="117dp"
            android:background="@drawable/card_title_rectangle"/>

        <TextView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="Title"
            android:textSize="20dp"
            android:id="@+id/post_title_text"
            android:layout_width="241dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/post_club_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="128dp"
            android:text="Club Name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/post_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="165dp"
            android:text="Date"
            android:textSize="15dp"
            android:textColor="@color/darkMaroon"/>

        <TextView
            android:layout_marginTop="191dp"
            android:layout_marginLeft="7dp"
            android:text="Time"
            android:textSize="15dp"
            android:id="@+id/post_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkMaroon" />

        <TextView
            android:layout_marginTop="217dp"
            android:layout_marginLeft="7dp"
            android:text="Location"
            android:textSize="15dp"
            android:id="@+id/post_location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkMaroon" />

        <TextView
            android:layout_marginTop="246dp"
            android:layout_marginLeft="7dp"
            android:text="Here is the description of the event. Here is the description of the event. Here is the description of the event. Here is the description of the event. Here is the description of the event. Here is the description of the event. Here is the description of the event. Here is the description of the event. "
            android:textSize="15dp"
            android:id="@+id/description_content"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="350dp"
            android:background="@null"
            android:text="Show Less"
            android:textColor="@color/bearGrey"
            android:onClick="getMoreInfo" />


    </android.support.v7.widget.CardView>

    <View
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:background="@color/colorAccent"/>

</android.support.v7.widget.CardView>