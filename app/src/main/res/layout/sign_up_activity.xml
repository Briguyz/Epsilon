<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/graduationYear_input"
        android:textColor="@color/textColorPrimary"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_graduation_date"  />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major_input"
        android:textColor="@color/textColorPrimary"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_major_title"  />

    <TextView
        android:text="Expected Graduation Date:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/new_graduation_date"
        android:layout_below="@+id/new_password_input"
        android:layout_alignLeft="@+id/new_password"
        android:layout_alignStart="@+id/new_password"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/new_email_input"
        android:hint='ex. "Jon.Doe@gmail.com"'
        android:layout_alignBaseline="@+id/new_email_title"
        android:layout_alignBottom="@+id/new_email_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:text="Enter Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/new_email_title"
        android:textSize="18sp"
        android:textColor="@color/textColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/new_password_input"
        android:hint='ex. "abc123"'
        android:layout_below="@+id/new_email_input"
        android:layout_alignLeft="@+id/new_email_input"
        android:layout_alignStart="@+id/new_email_input" />

    <TextView
        android:text="Enter Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_password"
        android:textSize="18sp"
        android:textColor="@color/textColorPrimary"
        android:layout_alignBaseline="@+id/new_password_input"
        android:layout_alignBottom="@+id/new_password_input"
        android:layout_alignLeft="@+id/new_email_title"
        android:layout_alignStart="@+id/new_email_title" />

    <TextView
        android:text="Major:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/new_major_title"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        android:layout_below="@+id/graduationYear_input"
        android:layout_alignLeft="@+id/new_graduation_date"
        android:layout_alignStart="@+id/new_graduation_date" />

    <Button
        android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="22dp"
        android:id="@+id/send_new_user"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/new_password_input"
        android:layout_alignEnd="@+id/new_password_input"
        android:onClick="signUp" />

</RelativeLayout>
