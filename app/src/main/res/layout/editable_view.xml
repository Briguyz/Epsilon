<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cs4532.umdalive.Models.CreateClub"
    android:background="@color/colorAccent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/edit_description"
        android:layout_below="@+id/edit_email"
        android:layout_alignLeft="@+id/edit_email"
        android:layout_alignStart="@+id/edit_email"
        android:textColor="@color/bearGrey" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_owner"
        android:textColor="@color/bearGrey"
        android:layout_below="@+id/edit_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edit_email"
        android:layout_below="@+id/edit_owner"
        android:layout_alignLeft="@+id/edit_owner"
        android:layout_alignStart="@+id/edit_owner"
        android:textColor="@color/bearGrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/text_description"
        android:textColor="@color/machinery"
        android:text="Description:"
        android:clickable="false"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edit_description"
        android:layout_toStartOf="@+id/edit_description"
        android:layout_alignBottom="@+id/edit_description"
        android:layout_below="@+id/text_admin_email" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keywordChooser"
        android:textColor="@color/textColorPrimary"
        android:background="@color/machineryTransparent"
        android:layout_below="@+id/keyword_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp" />

    <TextView
        android:id="@+id/keyword_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Category of Club:"
        android:textColor="@color/machinery"
        android:textSize="20sp"
        android:layout_below="@+id/edit_description" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"
        android:onClick="clickToSave"
        android:clickable="true"
        android:background="@color/bearGrey"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"/>

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/bearGrey"
        android:layout_toRightOf="@+id/text_name_title"
        android:layout_toEndOf="@+id/text_name_title" />

    <TextView
        android:id="@+id/text_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Club Name:"
        android:textColor="@color/machinery"
        android:textSize="19sp"
        android:layout_toLeftOf="@+id/edit_owner"
        android:layout_toStartOf="@+id/edit_owner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/text_owner_title"
        android:textColor="@color/machinery"
        android:text="Club Admin:"
        android:inputType="none"
        android:clickable="false"
        android:textSize="20sp"
        android:layout_below="@+id/edit_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edit_owner"
        android:layout_toStartOf="@+id/edit_owner"
        android:layout_above="@+id/edit_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/text_admin_email"
        android:textColor="@color/machinery"
        android:text="Contact Email:"
        android:inputType="none"
        android:clickable="false"
        android:textSize="20sp"
        android:layout_below="@+id/text_owner_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edit_email"
        android:layout_toStartOf="@+id/edit_email"
        android:layout_above="@+id/edit_description" />


    <TextView
        android:id="@+id/edit_invalid_input"
        android:paddingRight="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/machinery"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp"/>

    <Button
        android:id="@+id/deletePostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/save_button"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:onClick="deletePost"
        android:layout_toLeftOf="@+id/save_button"
        android:layout_toStartOf="@+id/save_button"
        android:text="@string/delete_post" />


</RelativeLayout>
