<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_alignBottom="@+id/display_club_keywords_title"
        android:layout_toRightOf="@+id/display_club_keywords_title"
        android:layout_toEndOf="@+id/display_club_keywords_title"
        android:id="@+id/display_clubs_keyword"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/display_club_name"
        android:layout_weight="1"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:textSize="35dp"
        android:inputType="none"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/display_club_description"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/display_club_description_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/display_clubs_administator"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/display_club_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/display_club_administrator_title"
        android:layout_toEndOf="@+id/display_club_administrator_title"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="Administrator of Club:"
        android:ems="10"
        android:id="@+id/display_club_administrator_title"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/display_clubs_administator"
        android:layout_alignBottom="@+id/display_clubs_administator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        tools:inputType="none"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/display_club_description_title"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="14dp"
        android:text="Description:"
        android:layout_below="@+id/display_clubs_administator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keywords"
        android:ems="10"
        android:id="@+id/display_club_keywords_title"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/display_club_description"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/display_club_description_title"
        android:layout_alignEnd="@+id/display_club_description_title"
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/display_clubs_keyword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:id="@+id/display_club_future_posts"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"/>

</RelativeLayout>
