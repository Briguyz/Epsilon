<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/oatmeal"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/example_image"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/card_title_rectangle"/>

        <TextView
            android:layout_marginTop="120dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="Title"
            android:textSize="20dp"
            android:id="@+id/post_title_text"
            android:layout_width="241dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/post_club_name"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="125dp"
            android:text="Club Name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/post_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="170dp"
            android:text="Date"
            android:textSize="15dp"
            android:textColor="@color/darkMaroon"/>

        <TextView
            android:layout_marginTop="195dp"
            android:layout_marginLeft="5dp"
            android:text="Time"
            android:textSize="15dp"
            android:id="@+id/post_time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkMaroon" />

        <TextView
            android:layout_marginTop="220dp"
            android:layout_marginLeft="5dp"
            android:text="Location"
            android:textSize="15dp"
            android:id="@+id/post_location"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darkMaroon" />


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="200dp"
        android:background="@null"
        android:text="More Info"
        android:textColor="@color/bearGrey"/>

</android.support.v7.widget.CardView>

