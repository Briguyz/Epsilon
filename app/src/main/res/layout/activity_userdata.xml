<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">


    <TextView
        android:id="@+id/graduation_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnermajor"
        android:textSize="15dp"
        android:layout_marginTop="59dp"
        android:text="Please enter Graduation" />



    <Spinner
            android:id="@+id/spinnermajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/majorText"
            android:layout_alignLeft="@+id/spinnergrad"
            android:layout_alignStart="@+id/spinnergrad" />

    <TextView
        android:id="@+id/majorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="What is your Major" />

        <Spinner
            android:id="@+id/spinnergrad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp"
            android:layout_alignBottom="@+id/graduation_text"
            android:layout_toRightOf="@+id/majorText"
            android:layout_toEndOf="@+id/majorText"></Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/graduation_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:onClick="Interests"
        android:text="Click to select interest"
        android:id="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="clickSaveData"
        android:text="Save" />

</RelativeLayout>
