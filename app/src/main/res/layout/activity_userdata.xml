<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.umdalive.Views.userdata">





        android:background="@color/colorAccent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/graduationYear_input"
            android:textColor="@color/textColorPrimary"
            android:background="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/new_graduation_date"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/major_input"
            android:textColor="@color/textColorPrimary"
            android:background="@color/colorPrimary"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/new_major_title"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:text="Expected Graduation Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_graduation_date"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="31dp"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:text="Major:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_major_title"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            android:layout_below="@+id/graduationYear_input"
            android:layout_alignLeft="@+id/new_graduation_date"
            android:layout_alignStart="@+id/new_graduation_date"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="16dp" />


        <Button
            android:id="@+id/send_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/colorPrimary"

            android:onClick="signUp"
            android:text="Send" />

        <ListView android:id="@+id/list3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Select your interests"
            android:layout_alignBottom="@+id/send_new_user"

            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp" />


</RelativeLayout>
